{
  "name": "ads1115",
  "description": "Gerador de função: senoidal, triangular ou quadrada, com ajuste de frequência e amplitude.",
  "author": "Prof. Josué Morais - UFU",
  "version": "1.0.0",
  "category": "Signal Generator",
  "icon": "chip",
  "features": [],
  "files": [
    "main.c"
  ],
  "pins": [
    {
      "name": "OUT",
      "type": "analog",
      "direction": "output",
      "description": "Saída do gerador de função"
    }
  ],
  "controls": [
    {
      "name": "waveform",
      "type": "select",
      "options": [
        { "label": "Senoidal", "value": "sine" },
        { "label": "Triangular", "value": "triangle" },
        { "label": "Quadrada", "value": "square" }
      ],
      "default": "sine",
      "label": "Forma de onda"
    },
    {
      "name": "frequency",
      "type": "number",
      "min": 1,
      "max": 10000,
      "step": 1,
      "default": 1000,
      "label": "Frequência (Hz)"
    },
    {
      "name": "amplitude",
      "type": "number",
      "min": 0,
      "max": 5,
      "step": 0.1,
      "default": 1,
      "label": "Amplitude (V)"
    }
  ]
}

